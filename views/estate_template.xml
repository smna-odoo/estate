<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hello_world" name="hello world">
        <h2>
            hello
            <t t-out="name" />
        </h2>
    </template>
    <template id="estate_props" name="template_name">
        <div class="table">
            <table>
                <thead>
                    <th>Sr no.</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>State</th>
                </thead>
                <tbody>
                    <t t-set="srno" t-value="0" />
                    <t t-foreach="property" t-as="pr">
                        <t t-set="srno" t-value="srno + 1" />
                        <tr t-attf-style="background:grey;">
                            <td>
                                <t t-out="srno" />
                            </td>
                            <td>
                                <t t-out="pr.name" />
                            </td>
                            <td>
                                <t t-if="pr.description">
                                    <t t-out="pr.description" />
                                </t>
                                <t t-else="">
                                    <p>No description</p>
                                </t>

                            </td>
                            <td>
                                <span t-field="pr.state"></span>
                                <!-- <t t-out="pr.state" /> -->
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </template>
    <template id="hello_user" name="template_name">
        <h1>
            hello
            <t t-out="name" />
        </h1>
        <t t-call="estate.estate_props" />
    </template>

    <template id="static_template" name="static template">
        <t t-call="website.layout">
            <h1>
                Hello
            </h1>

        </t>
    </template>

    <template id="static_tmp" name="property">
        <t t-call="website.layout">
            <div class="container">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th>Sequence</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>State</th>
                        </thead>
                        <tbody>
                            <t t-set="sequence" t-value="0" />
                            <t t-foreach="properties" t-as="prt">
                                <t t-set="sequence" t-value="sequence + 1" />
                                <!-- <tr t-att-class="sequence % 2 == 0 and 'o_even' or ''"> -->
                                <tr t-attf-style="#{sequence % 2 == 0 and 'background: grey;' or ''}">
                                    <td>
                                        <t t-out="sequence" />
                                    </td>
                                    <td>
                                        <!-- <a t-attf-href="/course/#{course.id}"> -->
                                        <t t-out="prt.name" />
                                        <!-- </a> -->
                                    </td>
                                    <td>
                                        <t t-if="prt.description" t-out="prt.description" />
                                        <t t-else="">No Description Available</t>
                                    </td>
                                    <td>
                                        <span t-field="prt.state" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="course_description" name="Course Description" inherit_id="estate.course_details" customize_show="True">
        <xpath expr="//div[contains(@class, 'o_course_details')]" position="inside">
            <div t-field="estate.description"></div>
        </xpath>
    </template>

    <template id="course_details" name="course_details">
        <div t-call="website.layout">
            <div class="container">
                <div class="row">
                    <div class="col-4">
                        <div t-attf-style="padding-top: 50%; background-image: url(/web/image/course.course/#{course.id}/image_1024); background-size: cover; background-position:center" />
                        <div>
                            <div>State of the Course</div>
                            <div t-field="course.state" />
                        </div>
                    </div>
                    <div class="col-8 o_course_details">
                        <div class="text-center font-weight-bold">
                            <span t-field="course.name" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>